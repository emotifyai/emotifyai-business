# =============================================================================
# EMOTIFYAI WEB APPLICATION - PRODUCTION ENVIRONMENT
# =============================================================================
# IMPORTANT: Replace ALL placeholder values with actual production credentials
# Copy this file to .env.production.local and fill in real values
# NEVER commit .env.production.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (Production Project)
# -----------------------------------------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
# Use your production Supabase project

# Supabase project URL (Production)
# Format: https://[project-id].supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PRODUCTION_PROJECT_ID.supabase.co

# Supabase anonymous key (Production)
# Get from: Supabase Dashboard → Settings → API → Project API keys → anon/public
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY

# Supabase service role key (Production - KEEP SECRET!)
# Get from: Supabase Dashboard → Settings → API → Project API keys → service_role
# WARNING: Never expose this in client-side code!
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY

# -----------------------------------------------------------------------------
# LEMON SQUEEZY CONFIGURATION (Production Mode)
# -----------------------------------------------------------------------------
# Get these from: https://app.lemonsqueezy.com/settings/api
# Use production mode (not test mode)

# Lemon Squeezy API key (Production)
LEMONSQUEEZY_API_KEY=YOUR_PRODUCTION_API_KEY

# Store ID (Production)
LEMONSQUEEZY_STORE_ID=YOUR_PRODUCTION_STORE_ID

# Webhook secret for signature verification (Production)
LEMONSQUEEZY_WEBHOOK_SECRET=YOUR_PRODUCTION_WEBHOOK_SECRET

# Product/Variant IDs for each subscription tier (Production)
# Create products in Lemon Squeezy production mode first

# Lifetime Launch Offer (Limited to 500 subscribers)
LEMONSQUEEZY_LIFETIME_LAUNCH_VARIANT_ID=YOUR_PRODUCTION_LIFETIME_LAUNCH_VARIANT_ID

# Monthly Plans
LEMONSQUEEZY_BASIC_MONTHLY_VARIANT_ID=YOUR_PRODUCTION_BASIC_MONTHLY_VARIANT_ID
LEMONSQUEEZY_PRO_MONTHLY_VARIANT_ID=YOUR_PRODUCTION_PRO_MONTHLY_VARIANT_ID
LEMONSQUEEZY_BUSINESS_MONTHLY_VARIANT_ID=YOUR_PRODUCTION_BUSINESS_MONTHLY_VARIANT_ID

# Annual Plans (25% discount)
LEMONSQUEEZY_BASIC_ANNUAL_VARIANT_ID=YOUR_PRODUCTION_BASIC_ANNUAL_VARIANT_ID
LEMONSQUEEZY_PRO_ANNUAL_VARIANT_ID=YOUR_PRODUCTION_PRO_ANNUAL_VARIANT_ID
LEMONSQUEEZY_BUSINESS_ANNUAL_VARIANT_ID=YOUR_PRODUCTION_BUSINESS_ANNUAL_VARIANT_ID

# -----------------------------------------------------------------------------
# ANTHROPIC (CLAUDE) CONFIGURATION (Production)
# -----------------------------------------------------------------------------
# Get your production API key from: https://console.anthropic.com/settings/keys

# Anthropic API key (Production)
ANTHROPIC_API_KEY=YOUR_PRODUCTION_ANTHROPIC_KEY

# Model to use (Production recommended)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for AI responses
ANTHROPIC_MAX_TOKENS=1024

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION (Production)
# -----------------------------------------------------------------------------

# Base URL for your application (Production)
# Used for: OAuth redirects, webhooks, absolute URLs
NEXT_PUBLIC_APP_URL=https://emotifyai.com

# Environment mode
NODE_ENV=production

# -----------------------------------------------------------------------------
# USAGE LIMITS (Production)
# -----------------------------------------------------------------------------

# Free Plan limits (number of enhancement actions, 10-day validity)
TRIAL_ENHANCEMENT_LIMIT=50

# Lifetime Launch Offer limits (500 credits per month)
LIFETIME_ENHANCEMENT_LIMIT=500

# Basic Monthly limits (350 credits per month)
BASIC_MONTHLY_ENHANCEMENT_LIMIT=350

# Pro Monthly limits (700 credits per month)
PRO_MONTHLY_ENHANCEMENT_LIMIT=700

# Business Monthly limits (1500 credits per month)
BUSINESS_MONTHLY_ENHANCEMENT_LIMIT=1500

# Rate limiting (requests per minute per user)
RATE_LIMIT_RPM=30

# Rate limiting window (in seconds)
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# OAUTH CONFIGURATION (Production)
# -----------------------------------------------------------------------------
# Configure these in Google Cloud Console for production

# Google OAuth Client ID (Production)
# Get from: Google Cloud Console → APIs & Services → Credentials
# Configure redirect URIs:
# - https://emotifyai.com/auth/callback
# - https://YOUR_SUPABASE_PROJECT_ID.supabase.co/auth/v1/callback
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID

# Google OAuth Client Secret (Production - Server-side only)
GOOGLE_OAUTH_CLIENT_SECRET=YOUR_PRODUCTION_GOOGLE_CLIENT_SECRET

# -----------------------------------------------------------------------------
# MONITORING AND ANALYTICS (Production)
# -----------------------------------------------------------------------------

# Sentry for error tracking (Recommended for production)
NEXT_PUBLIC_SENTRY_DSN=YOUR_PRODUCTION_SENTRY_DSN
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=YOUR_PRODUCTION_ANALYTICS_ID
NEXT_PUBLIC_ANALYTICS_PROVIDER=plausible

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Production)
# -----------------------------------------------------------------------------

# Email provider for transactional emails
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=YOUR_PRODUCTION_EMAIL_API_KEY
EMAIL_FROM_ADDRESS=noreply@emotifyai.com
EMAIL_FROM_NAME=EmotifyAI

# -----------------------------------------------------------------------------
# SECURITY AND PERFORMANCE (Production)
# -----------------------------------------------------------------------------

# Production security flags
DEBUG=false
MOCK_AI_RESPONSES=false
DISABLE_RATE_LIMIT=false
LOG_SQL_QUERIES=false
SKIP_AUTH=false

# CORS origins (Production)
CORS_ORIGINS=https://emotifyai.com

# -----------------------------------------------------------------------------
# EXTERNAL SERVICE URLS (Production)
# -----------------------------------------------------------------------------
# These should all use emotifyai.com domain

# Webhook endpoints for external services
LEMONSQUEEZY_WEBHOOK_URL=https://emotifyai.com/api/webhooks/lemonsqueezy

# OAuth redirect URIs
GOOGLE_OAUTH_REDIRECT_URI=https://emotifyai.com/auth/callback
SUPABASE_OAUTH_REDIRECT_URI=https://emotifyai.com/auth/callback

# Extension communication
EXTENSION_API_BASE_URL=https://emotifyai.com/api

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------

# Build optimization
NEXT_TELEMETRY_DISABLED=1
ANALYZE_BUNDLE=false

# Database connection pooling (if using external DB)
# DATABASE_POOL_SIZE=10
# DATABASE_TIMEOUT=30000
