# Production environment for Verba Web Application
# IMPORTANT: Replace ALL placeholder values with actual production credentials
# Copy this file to .env.production.local and fill in real values
# NEVER commit .env.production.local to version control

# Supabase (Production Project)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY

# Lemon Squeezy (Production Mode)
LEMONSQUEEZY_API_KEY=YOUR_PRODUCTION_API_KEY
LEMONSQUEEZY_STORE_ID=YOUR_STORE_ID
LEMONSQUEEZY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET
LEMONSQUEEZY_MONTHLY_VARIANT_ID=YOUR_MONTHLY_VARIANT_ID
LEMONSQUEEZY_LIFETIME_VARIANT_ID=YOUR_LIFETIME_VARIANT_ID

# Anthropic (Production API Key)
ANTHROPIC_API_KEY=YOUR_PRODUCTION_ANTHROPIC_KEY
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=1024

# Application
NEXT_PUBLIC_APP_URL=https://verba.app
NODE_ENV=production

# Usage Limits
TRIAL_ENHANCEMENT_LIMIT=10
MONTHLY_ENHANCEMENT_LIMIT=1000
LIFETIME_ENHANCEMENT_LIMIT=-1

# Rate Limiting
RATE_LIMIT_RPM=10
RATE_LIMIT_WINDOW=60

# Monitoring (Optional but recommended)
NEXT_PUBLIC_SENTRY_DSN=YOUR_SENTRY_DSN
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Email (Optional)
# EMAIL_PROVIDER=sendgrid
# EMAIL_API_KEY=YOUR_EMAIL_API_KEY
# EMAIL_FROM_ADDRESS=noreply@verba.app
# EMAIL_FROM_NAME=Verba

# Analytics (Optional)
# NEXT_PUBLIC_ANALYTICS_ID=YOUR_ANALYTICS_ID
# NEXT_PUBLIC_ANALYTICS_PROVIDER=plausible

# Production Flags
DEBUG=false
MOCK_AI_RESPONSES=false
DISABLE_RATE_LIMIT=false
LOG_SQL_QUERIES=false
